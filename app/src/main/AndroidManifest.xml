<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fuzho.nimingban">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainView"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".post.PostView"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".imageviewer.ImageViewerView"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".send.SendView"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".test.RichTextTestActivity"
            android:label="@string/title_activity_rich_text_test"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
